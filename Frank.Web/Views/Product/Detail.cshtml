@{
	ViewBag.Title = "Detail";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Frank.Model.Entities
@using Frank.Web.Models.ProductModels
@model ProductDetailVM
<style>
	.a {
		margin: auto;
		height: auto;
		margin-top: 40px;
	}

	.b {
		margin: 30px auto;
	}

	.c {
		margin: auto;
		width: 100%;
		align-items: center;
		text-align: center;
		padding-top: 10px;
	}

	.product-main-image {
		width: 80%; /* Adjust the main image size */
		height: auto;
	}

	.product-thumb-image {
		width: 50px; /* Adjust the thumbnail image size */
		height: 50px;
	}
</style>
<div class="a">
	<div class="b">
		<div class="container">
			<div class="row gx-5">
				<aside class="col-lg-6">
					<div class="border rounded-4 mb-3 d-flex justify-content-center">
							<img style="margin: auto;" class="rounded-4 fit product-main-image" src="http://1000logos.net/wp-content/uploads/2016/11/Colors-Coca-Cola-Logo.jpg" alt="Không có ảnh"/>			
					</div>

				</aside>
				<main class="col-lg-6">
					<div class="ps-lg-3">
						<h2 class="title text-dark">
							<br />
							@Model.Product.Name
						</h2>
						<div class="d-flex flex-row my-3">
							<div class="text-warning mb-1 me-2">
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fas fa-star-half-alt"></i>
							</div>
						</div>
						<p>
							@Model.Product.Description
						</p>

						<div class="row">
							<div class="col-md-4 col-6">
								<p>Số lượng còn: @Model.Product.Quantity</p>
							</div>
						</div>
						<div class="row">
							<div class="col-md-4 col-6">
								<p>Giá : @Model.AttributeProducts.Price  VND</p>
							</div>
						</div>
						<div class="row">
							<p class="col-md-4 col-6">Số lượng</p>
							<div class="col-md-4 col-6">
								<select class="form-select border border-secondary" style="height: 35px; width:100px;">
									<option value="1">Small</option>
									<option value="2">Medium</option>
									<option value="3">Large</option>
								</select>
							</div>
						</div>
						<div class="row">			
								<button type="submit" class="btn btn-primary shadow-0" style="width:100%;"> <i class="me-1 fa fa-shopping-basket"></i> Thêm vào giỏ hàng </button>
						</div>
					</div>
				</main>
			</div>
		</div>
	</div>
</div>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.7.1.slim.min.js"></script>
